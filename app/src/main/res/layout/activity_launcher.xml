<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_version"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/btnOriginalVersion"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/original_version"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnMviVersion"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/mvi_version"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnComposeVersion"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/compose_version"
        android:textSize="16sp" />

</LinearLayout>